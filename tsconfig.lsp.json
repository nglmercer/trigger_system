{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "dist/lsp",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "src/lsp/**/*.ts",
    "src/domain/**/*.ts",
    "src/core/expression-engine.ts",
    "src/types.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "src/**/*.test.ts",
    "src/cli/**/*.ts",
    "src/core/!(expression-engine).ts",
    "src/io/**/*.ts",
    "src/index*.ts",
    "src/node.ts"
  ]
}